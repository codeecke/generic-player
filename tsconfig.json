  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true
